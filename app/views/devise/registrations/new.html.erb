<div class="signup-form">
  <h2 style="color:lightblue">Register</h2>
      <p class="hint-text">Create your account. It's free and only takes a minute.</p>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-group">
       <%= f.label :"Enter your name :" %>
      <%= f.text_field :name, autofocus: true, class:"form-control" %>

    </div>
    <div class="form-group">
        <%= f.label :"Enter your Username : " %>
        <%= f.text_field :user_name, autofocus: true,  class:"form-control"  %>
    </div>
    <div class="form-group">
        <%= f.label :"Enter your Phone number:" %>
    <%= f.text_field :phone_number, autofocus: true,  class:"form-control" %>
    </div>
    <div class="form-group">
       <%= f.label "Enter Email Address : " %> 
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
    </div>
    <div class="form-group">
       <%= f.label "Confirm Email Address : " %> 
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
    </div>
    <div class="form-group">
        <%= f.label "Create Password:"%>
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
    </div>
    <div class="form-group">
       <%= f.label "Confirm Password : " %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
    </div>
    <div class="form-group">
    <%= f.label "I am a : "%>
      <%= f.check_box :is_buyer, {}, true %> <%= f.label :is_buyer, "Buyer", class:"checkbox-inline" %>
        <%= f.check_box :is_seller, {}, true %> <%= f.label :is_seller, "Seller", class:"checkbox-inline" %>
    </div>
    <div class="form-group">
        <%= f.submit "Sign up" , class:"btn btn-success btn-lg btn-block" %>
    </div>
    <div class="text-center">Already have an account?<%= render "devise/shared/links" %> </div>
</div>
    


<% end %>


